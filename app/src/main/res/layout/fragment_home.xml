<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.HomeFragment">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="189dp"
        android:src="@drawable/home_design" />

    <com.google.android.material.search.SearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/img_1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="-33dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/light_Purple"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/search_bar"
        android:text="@string/tv1"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/tv_1"
        android:text="@string/information"
        android:textSize="12sp"
        android:textColor="@color/black_200" />

    <Button
        android:id="@+id/view_all_1"
        android:layout_width="143dp"
        android:layout_height="54dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/search_bar"
        android:layout_toRightOf="@+id/tv_1"
        android:text="@string/view_all"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/tv_2"
        android:text="@string/promo"
        android:textSize="12sp"
        android:textColor="@color/black_200" />

    <RelativeLayout
        android:id="@+id/rl_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/tv_3">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_btn_1"
            android:layout_width="69dp"
            android:layout_height="73dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/choice_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_btn_1"
            android:layout_marginRight="23dp"
            android:text="Daily Wear"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_btn_2"
            android:layout_width="69dp"
            android:layout_height="73dp"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@id/img_btn_1"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/choice_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_btn_2"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="24dp"
            android:layout_toRightOf="@id/choice_1"
            android:text="Sepatu"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_btn_3"
            android:layout_width="69dp"
            android:layout_height="73dp"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@id/img_btn_2"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/choice_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_btn_3"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="23dp"
            android:layout_toRightOf="@id/choice_2"
            android:text="Karpet"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_btn_4"
            android:layout_width="69dp"
            android:layout_height="73dp"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@id/img_btn_3"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/choice_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_btn_3"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/choice_3"
            android:text="Helmet"
            android:textSize="14sp"
            android:textColor="@color/black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/rl_choices"
        android:text="@string/tv2"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/tv_4"
        android:text="@string/information_2"
        android:textSize="12sp"
        android:textColor="@color/black_200" />

    <Button
        android:id="@+id/view_all_2"
        android:layout_width="143dp"
        android:layout_height="54dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/rl_choices"
        android:layout_toRightOf="@+id/tv_4"
        android:text="@string/view_all"
        android:textSize="15sp"/>

</RelativeLayout>