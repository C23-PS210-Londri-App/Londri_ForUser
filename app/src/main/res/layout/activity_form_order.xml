<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="32dp"
    tools:context=".ui.order.OrderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Raihan Ardinegoro"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_marginTop="2dp"
                    android:text="081284456666"
                    android:textSize="16sp"
                    android:textColor="@color/black_200" />

            </RelativeLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/rl_1"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" />

            <TextView
                android:id="@+id/laundry_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mapView"
                android:layout_marginTop="20dp"
                android:text="AndrihLaund"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/rl_jml1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/laundry_name"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Jumlah Pakaian"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/total1EditTextLayout"
                    android:layout_width="30dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="178dp"
                    android:layout_toEndOf="@id/tv_2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/total1EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:ems="10"
                        android:inputType="number"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/kilogram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/total1EditTextLayout"
                    android:text="Kg"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pilih_jasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_jml1"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/tv_jasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jasa yang dipakai"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="150dp"
                    android:orientation="vertical"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_spinner"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                        android:id="@+id/spinner_jasa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="8dp"
                        tools:ignore="TouchTargetSizeCheck"
                        android:entries="@array/JasaYangDipakai"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pilih_paket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pilih_jasa"
                android:layout_marginTop="23dp" >

                <TextView
                    android:id="@+id/tv_paket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paket yang dipakai"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout_2"
                    android:layout_width="150dp"
                    android:orientation="vertical"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_spinner"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                        android:id="@+id/spinner_paket"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="8dp"
                        tools:ignore="TouchTargetSizeCheck"
                        android:entries="@array/JasaYangDipakai"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/catatanTextLayout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/pilih_paket"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="Catatan:"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:background="@color/black_100"
                android:layout_below="@id/catatanTextLayout" />

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/hasil_pilihan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Komplit X Regular"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/harga_pilihan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hasil_pilihan"
                    android:layout_marginTop="1dp"
                    android:text="4 Kg"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/harga_paket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hasil_pilihan"
                    android:layout_toEndOf="@id/harga_pilihan"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="52dp"
                    android:text="*@5.000"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/hasil_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/harga_paket"
                    android:layout_below="@id/hasil_pilihan"
                    android:layout_marginTop="1dp"
                    android:text="20.000"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="146dp" />

                <TextView
                    android:id="@+id/txt_estimasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/harga_pilihan"
                    android:layout_marginTop="16dp"
                    android:text="Estimasi Biaya"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/harga_estimasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txt_estimasi"
                    android:layout_below="@id/hasil_harga"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="152dp"
                    android:text="Rp 20.000"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_2"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/blue_500"
                android:text="Lanjutkan"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>