<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:elevation="8dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvService"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <ImageView
            android:id="@+id/iconAvailable"
            android:src="@drawable/ic_check"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:contentDescription="@string/available"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvNamaLayanan"/>


        <TextView
            android:id="@+id/tvNamaLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cuci"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/iconAvailable"
            app:layout_constraintBottom_toBottomOf="@id/iconAvailable"
            app:layout_constraintStart_toEndOf="@id/iconAvailable"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>