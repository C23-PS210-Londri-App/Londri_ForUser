<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    tools:context=".ui.profilepage.ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back"
                tools:layout_editor_absoluteX="2dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ubah Profi"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                tools:layout_editor_absoluteY="9dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Profil"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="56dp"
                tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/txt_1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/profile_londri" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="54dp"
                    android:clickable="true"
                    android:src="@drawable/add_img_btn"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/edit_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_img"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:text="Ganti"
                    android:textColor="@color/black_200"
                    android:textSize="16sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/keterangan_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profile_img"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="30dp"
                    android:text= "Pasang foto yang oke!"
                    android:textSize="17sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/keterangan_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profile_img"
                    android:layout_below="@id/keterangan_1"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="1dp"
                    android:text= "Semua orang bisa lihat."
                    android:textSize="17sp"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <EditText
                android:id="@+id/nama_user"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/rl_1"
                android:layout_marginTop="20dp"
                android:hint="Nama"
                android:ems="20"
                android:inputType="text" />

            <EditText
                android:id="@+id/nomor_user"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/nama_user"
                android:layout_marginTop="5dp"
                android:hint="Nama"
                android:ems="20"
                android:inputType="number" />

            <EditText
                android:id="@+id/email_user"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/nomor_user"
                android:layout_marginTop="5dp"
                android:hint="Nama"
                android:ems="20"
                android:inputType="textEmailAddress" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView2"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/email_user"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/alamat_user"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/mapView2"
                android:layout_marginTop="5dp"
                android:hint="Alamat"
                android:ems="20"
                android:inputType="text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/alamat_user"
                android:text="Simpan"
                android:textSize="20dp"
                android:backgroundTint="@color/blue_500"
                app:cornerRadius="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>